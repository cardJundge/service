.add{
  float: right;
  font-weight: bold;
  color:#FF4444;
  font-size:12px;
  }
  .content{
    width:95%;
    margin: 0px auto;
    padding-top:10px;
  }
  .eachData{
    font-size: 14px;
    padding: 8px 0px;
  }
  .state{
    display: inline-block;
    width:50px;
    line-height: 20px;
    font-size: 12px;
    padding: 0px 5px;
    border-radius: 3px;
    text-align:center;
    background: #44BB00;
    color:#fff;
    float: right;
  }
  .classify{
    font-size:12px;
    color:#aaa;
    padding: 2px 0px;
  }
  .update{
    padding: 5px 0px;
    font-size: 12px;
    color:#3891f8;
    float: right;
  }
  .carHostModal,.fordiddelModal,.editlModal,.deleteModal{
    width:100%;
    height: 100%;
    position: fixed;
    top:0px;
    left:0px;
    background: rgba(160,160,160,0.6);
    color:#555;
  }
  .carHostcontent{
    width:70%;
    background: rgba(255,255,255,1);
    margin:150px auto;
    border-radius: 10px;
  }
  .confirm{
    padding: 20px 20px 40px;
    font-size: 16px;
    border-bottom: 1px solid #ddd;
  }
  .cancel{
    display: inline-block;
    width:49%;
    text-align: center;
    font-size: 16px;
    padding: 16px 0px;
  }
  .yes{
    color:green;
    border-left: 1px solid #ddd;
  }
 .eachInfor{
    border-bottom: 1px solid #ddd;
  }
  .tit{
    position: fixed;
    left:0px;
    width:100%;
    background: linear-gradient(#3891F8, rgb(164, 205, 253));
    opacity: 1;
    z-index: 2
  }