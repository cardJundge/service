/**index.wxss**/
@import "../wxSortPickerView/wxSortPickerView.wxss";
.tit{
  position: fixed;
  left:0px;
  width:100%;
  background: linear-gradient(#3891F8, rgb(164, 205, 253));
}
.search {
  width:60%;
}
.titIcon {
   width:30%;
  text-align: left;
}
.icon{
  display: inline-block;
  width: 50%;
  margin: 0px;
  padding: 0px;
}
.groupOprator{
  position: absolute;
  display: inline-block;
  width:30%;
  background: #fff;
  left: 70%;
  top:30px;
  font-size: 14px;
  padding: 5px;
  border-radius: 5px;
  line-height: 30px;
  z-index: 3;
  color:#3891F8;
  box-shadow: 0px 0px 20px 4px #3891F8;
}
.modal,.carHostModal{
  position: fixed;
  width:100%;
  height: 100vh;
  top:0px;
  left:0px;
  background: rgba(150,150,150,0.6)
}
.zan-icon-clear{
  color: rgba(150,150,150,0.6);
  font-size: 14px;
}
.loading{
  text-align: center;
}
.loading image{
  width:26px;
  height: 26px;
}